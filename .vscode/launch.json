    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Unit Tests",
            "type": "node",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "args": [
                "${workspaceFolder}/dist/test/unit/**/*.js"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**",
                "!${workspaceFolder}/node_modules/**"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "${workspaceFolder}/**/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        }
    }
